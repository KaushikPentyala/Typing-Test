<body>

    <h2>Typing Speed Test</h2>
    <div class="container">
        <div class="text" id="text">Click "Start" to begin!</div>
        <textarea id="inputText" placeholder="Start typing here..." disabled></textarea>
        <button onclick="startTest()">Start</button>
        <button onclick="resetTest()">Reset</button>
        <div class="result" id="result"></div>
    </div>

    <script>
        const sentences = [
            "The quick brown fox jumps over the lazy dog.",
            "Typing speed tests help improve accuracy and speed.",
            "Practice makes perfect when learning to type fast.",
            "Javascript is a versatile programming language."
        ];
        let startTime, endTime;
        let currentSentence = "";

        function startTest() {
            currentSentence = sentences[Math.floor(Math.random() * sentences.length)];
            document.getElementById("text").innerText = currentSentence;
            document.getElementById("inputText").disabled = false;
            document.getElementById("inputText").value = "";
            document.getElementById("inputText").focus();
            document.getElementById("result").innerText = "";
            startTime = new Date().getTime();
        }

        function resetTest() {
            document.getElementById("text").innerText = "Click 'Start' to begin!";
            document.getElementById("inputText").value = "";
            document.getElementById("inputText").disabled = true;
            document.getElementById("result").innerText = "";
        }

        document.getElementById("inputText").addEventListener("input", function() {
            let typedText = this.value;
            if (typedText === currentSentence) {
                endTime = new Date().getTime();
                let timeTaken = (endTime - startTime) / 1000;
                let words = currentSentence.split(" ").length;
                let wpm = Math.round((words / timeTaken) * 60);
                document.getElementById("result").innerText = `Speed: ${wpm} WPM`;
                document.getElementById("inputText").disabled = true;
            }
        });
    </script>

</body>
</html>
